<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Top Genres of the Month</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
        background-color: #f8f9fa;
      }

      .container {
        max-width: 1200px;
        padding: 2rem;
      }

      .row {
        margin-bottom: 2rem;
      }

      h1 {
        margin-bottom: 2rem;
        text-align: center;
      }

      .genre-rank {
        display: inline-block;
        font-size: 1.5rem;
        color: #1db954;
        margin-bottom: 1rem;
      }

      .genre {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        padding: 1rem;
        transition: transform 0.3s;
      }

      .genre:hover {
        transform: translateY(-5px);
      }

      .genre img {
        width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 1rem;
      }

      .genre-name {
        font-weight: 700;
        margin-bottom: 0.5rem;
      }
      .btn-outline-secondary {
        border-color: #1db954;
        color: #1db954;
      }

      .btn-outline-secondary:hover {
        background-color: #1db954;
        color: #ffffff;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Top Genres of the Month</h1>
      <div class="text-center mb-4">
        <a href="/stats" class="btn btn-outline-secondary">Back to Stats</a>
      </div>

      <div class="row row-cols-1 row-cols-md-3 row-cols-lg-5 g-4">
        <% topGenres.forEach(genre => { %>
        <div class="col">
          <div class="genre">
            <div class="genre-rank"><%= genre.rank %></div>
            <img
              src="<%= genre.artistImage %>"
              alt="<%= genre.name %> Representative Image"
            />
            <h2 class="genre-name"><%= genre.name %></h2>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <div class="container text-center">
      <a href="/stats" class="btn btn-outline-secondary">Back to Stats</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
  </body>
</html>
